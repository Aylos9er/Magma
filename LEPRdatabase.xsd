           	  <xs:element name="h2o"          type="xs:double" minOccurs="0"/>
           	  <xs:element name="co2"          type="xs:double" minOccurs="0"/>
           	  <xs:element name="sro"          type="xs:double" minOccurs="0"/>
           	  <xs:element name="bao"          type="xs:double" minOccurs="0"/>
